package  {	import flash.display.MovieClip;	import flash.events.KeyboardEvent;	import flash.events.MouseEvent;	import flash.geom.Point;	import flash.ui.Keyboard;		public class Main extends MovieClip	{		public var paddle1:Paddle;		public var paddle2:Paddle;		public var ball:Ball;		public function Main() {						this.ball = new Ball(200,200,10);			this.addChild(this.ball);			// constructor code			paddle1 = new Paddle(this.stage, this.ball, 10, 10, this.stage.stageWidth,this.stage.stageHeight, new Point(1,0));			this.addChild(paddle1);						paddle2 = new Paddle(this.stage, this.ball, 540,10, this.stage.stageWidth,this.stage.stageHeight, new Point(-1,0), 40, 38);			this.addChild(paddle2);			this.stage.addEventListener(KeyboardEvent.KEY_DOWN, startGame);		}				public function startGame(e:KeyboardEvent):void {						this.stage.removeEventListener(KeyboardEvent.KEY_DOWN, startGame);			this.ball.init();			this.ball.changeVector(new Point(1,0));			trace("hello")		}	}	}