package {	import flash.text.TextField;	import flash.display.MovieClip;	import fl.text.TLFTextField;	import flash.text.TextFormat;		public class ScoreBoard extends MovieClip{				private var _pointLimit:int;		private var _player1:int;		private var _player2:int;		private var _scoreText_player1:TextField;		private var _scoreText_player2:TextField;		private var _namePlate_player1:TextField;		private var _namePlate_player2:TextField;				public function ScoreBoard(pointLimit:int) {			// constructor code			this._pointLimit = pointLimit;			this._scoreText_player1 = scoreText_player1;			this._scoreText_player2 = scoreText_player2;			this._namePlate_player1 = namePlate_player1;			this._namePlate_player2 = getInstanceText("namePlate_player2");			this.resetScoreBoard();		}				private function getInstanceText(tf_name:String):TextField {			return this.getChildByName(tf_name) as TextField;		}		public function set pointLimit(limit:int):void {			this._pointLimit = limit;		}				public function get pointLimit():int {			return this._pointLimit;		}				public function resetScoreBoard():void {			this._scoreText_player1.text = "This really relaly sucks";			this._scoreText_player2.text = "0000";				this._scoreText_player1.textColor = 0xFF0000;			this._scoreText_player1.border = true;		}		public function scorePoint_player1():int {			// add a point to the player 1			this._player1 += 1;			this._scoreText_player1.text = this._player1.toString();						return this._player1;		}				public function scorePoint_player2():int {			// add a point to player 2			this._player2 += 1;			this._scoreText_player2.text = this._player2.toString();						return this._player2;		}					}	}